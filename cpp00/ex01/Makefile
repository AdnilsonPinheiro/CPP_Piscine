###############################################################################
#                            Target and Compiler                              #
###############################################################################
NAME := awesomePhoneBook

CC := c++

###############################################################################
#                                    Flags                                    #
###############################################################################
FLAGS = -Wall -Wextra -Werror -std=c++98

###############################################################################
#                                    vpath                                    #
###############################################################################
vpath %.hpp includes
vpath %.cpp src

###############################################################################
#                              Builds' Directory                              #
###############################################################################
BUILD_DIR := build

###############################################################################
#                               Source Files                                  #
###############################################################################
SRC_FILES := Contact.cpp PhoneBook.cpp utils.cpp main.cpp

###############################################################################
#                               Object Files                                  #
###############################################################################
OBJ_FILES := $(SRC_FILES:%.cpp=$(BUILD_DIR)/%.o)

###############################################################################
#                                Basic Rules                                  #
###############################################################################
.PHONY: all clean fclean re

all: $(BUILD_DIR) $(NAME)

###############################################################################
#                               Create ./build                                #
###############################################################################
$(BUILD_DIR):
	@mkdir -p $@
	@echo "$(GREEN)Creating$(RESET) $(BUILD_DIR)"
	@echo "$(GREEN)Compiled objects$(RESET)"

###############################################################################
#                        Compile objects into /build                          #
###############################################################################
$(BUILD_DIR)/%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CC) $(FLAGS) -c $< -o $@

###############################################################################
#                               Build executable                              #
###############################################################################
$(NAME): $(OBJ_FILES) $(LIBFT)
	@$(CC) $(FLAGS) $(OBJ_FILES) -o $@
	@echo "$(YELLOW)Compiled$(RESET) $(NAME)"

###############################################################################
#                               Build executable                              #
###############################################################################
valgrind: $(NAME)
	@echo "$(YELLOW)Running on Valgrind$(RESET)"
	@valgrind --leak-check=full \
	--show-leak-kinds=all \
	./$(NAME)

###############################################################################
#                                  Clean up                                   #
###############################################################################
clean:
	@rm -rf $(BUILD_DIR)
	@echo "$(BLUE)Cleaned object files$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(BLUE)Cleaned executables$(RESET) $(NAME)"

re: fclean all

###############################################################################
#                               Color Codes                                   #
###############################################################################
RED = \033[1;31m

GREEN = \033[1;32m

YELLOW = \033[1;33m

BLUE = \033[1;34m

RESET = \033[0m